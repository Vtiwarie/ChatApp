<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_coding_tasks"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Coding Tasks"
        android:textColor="#ffffff"
        android:textSize="22pt" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="@dimen/btn_main_height"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="11dp"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        android:onClick="onChatButtonClicked"
        android:scaleType="fitXY"
        android:src="@drawable/btn_main_chat"
        android:text="Chat" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="@dimen/btn_main_height"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        android:onClick="onLoginButtonClicked"
        android:scaleType="fitXY"
        android:src="@drawable/btn_main_login"
        android:text="Login" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="@dimen/btn_main_width"
        android:layout_height="@dimen/btn_main_height"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="11dp"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        android:onClick="onAnimationTestButtonClicked"
        android:scaleType="fitXY"
        android:src="@drawable/btn_main_animation"
        android:text="@string/animation_button" />

</RelativeLayout>
